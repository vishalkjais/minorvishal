                </div>
                
                
                
            </div>
            <div class="footer-column">
                <h2>Give Feedback</h2>
                <form id="feedback-form" action="/submit-feedback" method="post">
                  <input type="text" name="username" placeholder="Your Name" required>
                  <textarea name="message" placeholder="Your Feedback" rows="4" required></textarea>
                  <button type="submit">Submit</button>
                </form>
              </div>
        </div>
    </footer>
    <script>
       document.addEventListener("DOMContentLoaded", function () {
    // Get the navigation links
    const findUsLink = document.querySelector(".find-us-link");
    const feedbackLink = document.querySelector(".feedback-link");

    // Get the footer element
    const footer = document.getElementById("myFooter");

    // Function to scroll to the footer smoothly
    function scrollToFooter() {
        footer.scrollIntoView({ behavior: "smooth" });
    }

    // Add click event listeners to the links
    findUsLink.addEventListener("click", function (e) {
        e.preventDefault();
        scrollToFooter();
    });

    feedbackLink.addEventListener("click", function (e) {
        e.preventDefault();
        scrollToFooter();
    });
});

    </script>    

    <script src="/js/caro.js"></script>
